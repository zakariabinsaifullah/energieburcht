{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 3,
    "settings": {
        "appearanceTools": true,
        "layout": {
            "contentSize": "1400px",
            "wideSize": "1600px"
        },
        "color": {
            "palette": [
                {
                    "slug": "black",
                    "color": "#000000",
                    "name": "Black"
                },
                {
                    "slug": "dark-gray",
                    "color": "#212529",
                    "name": "Dark Gray"
                },
                {
                    "slug": "blue",
                    "color": "#00ACDD",
                    "name": "Blue"
                },
                {
                    "slug": "cyan",
                    "color": "#0095c0",
                    "name": "Cyan"
                },
                {
                    "slug": "light-blue",
                    "color": "#e0f0f5",
                    "name": "Light Blue"
                },
                {
                    "slug": "navy",
                    "color": "#003449",
                    "name": "Navy"
                },
                {
                    "slug": "light-gray",
                    "color": "#9BABAE",
                    "name": "Light Gray"
                },
                {
                    "slug": "red",
                    "color": "#E31C23",
                    "name": "Red"
                },
                {
                    "slug": "white",
                    "color": "#FFFFFF",
                    "name": "White"
                },
                {
                    "slug": "off-white",
                    "color": "#EFEFEF",
                    "name": "Off White"
                }
            ]
        },
        "typography": {
            "fontFamilies": [
                {
                    "fontFamily": "\"Mic 32 New\", sans-serif",
                    "slug": "mic-32-new",
                    "name": "Mic 32 New",
                    "fontFace": [
                        {
                            "fontFamily": "Mic 32 New",
                            "fontWeight": "400",
                            "fontStyle": "normal",
                            "src": [
                                "file:./assets/fonts/mic-32-new-regular.woff2"
                            ]
                        },
                        {
                            "fontFamily": "Mic 32 New",
                            "fontWeight": "500",
                            "fontStyle": "normal",
                            "src": [
                                "file:./assets/fonts/mic-32-new-medium.woff2"
                            ]
                        }
                    ]
                },
                {
                    "fontFamily": "-apple-system, \"system-ui\", Roboto, \"Helvetica Neue\", Arial, \"Noto Sans\", sans-serif, \"Apple Color Emoji\", \"Segoe UI Emoji\", \"Segoe UI Symbol\", \"Noto Color Emoji\"",
                    "slug": "system-sans",
                    "name": "System Sans"
                }
            ],
            "fontSizes": [
                {
                    "name": "Small",
                    "slug": "small",
                    "size": "0.875rem"
                },
                {
                    "name": "Medium",
                    "slug": "medium",
                    "size": "1rem"
                },
                {
                    "name": "Large",
                    "slug": "large",
                    "size": "clamp(1.125rem, 2vw, 1.25rem)"
                },
                {
                    "name": "Extra Large",
                    "slug": "x-large",
                    "size": "clamp(1.25rem, 2.5vw, 1.5rem)"
                },
                {
                    "name": "XXL",
                    "slug": "xxl",
                    "size": "clamp(1.5rem, 3vw, 2rem)"
                },
                {
                    "name": "XXXL",
                    "slug": "xxxl",
                    "size": "clamp(2rem, 4vw, 2.5rem)"
                },
                {
                    "name": "Super",
                    "slug": "super",
                    "size": "clamp(2.25rem, 5vw, 3rem)"
                }
            ]
        },
        "spacing": {
            "spacingScale": {
                "unit": "rem",
                "increment": 0.5,
                "steps": 7,
                "mediumStep": 1.5
            },
            "spacingSizes": [
                {
                    "name": "XS",
                    "slug": "xs",
                    "size": "0.5rem"
                },
                {
                    "name": "Small",
                    "slug": "sm",
                    "size": "1rem"
                },
                {
                    "name": "Medium",
                    "slug": "md",
                    "size": "1.5rem"
                },
                {
                    "name": "Large",
                    "slug": "lg",
                    "size": "2.25rem"
                },
                {
                    "name": "XL",
                    "slug": "xl",
                    "size": "3rem"
                },
                {
                    "name": "XXL",
                    "slug": "xxl",
                    "size": "5rem"
                }
            ]
        }
    },
    "styles": {
        "color": {
            "text": "var(--eb-body-text)",
            "background": "var(--eb-body-bg)"
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--system-sans)",
            "fontSize": "var(--eb-typography-body)",
            "lineHeight": "1.5"
        },
        "elements": {
            "heading": {
                "color": {
                    "text": "var(--eb-h1-color)"
                },
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--mic-32-new)",
                    "fontWeight": "500"
                }
            },
            "h1": {
                "color": {
                    "text": "var(--eb-h1-color)"
                },
                "typography": {
                    "fontSize": "var(--eb-typography-h1, clamp(2rem, 4vw, 2.5rem))"
                }
            },
            "h2": {
                "color": {
                    "text": "var(--eb-h2-color)"
                },
                "typography": {
                    "fontSize": "var(--eb-typography-h2, clamp(1.5rem, 3vw, 2rem))"
                }
            },
            "h3": {
                "color": {
                    "text": "var(--eb-h3-color)"
                },
                "typography": {
                    "fontSize": "var(--eb-typography-h3, clamp(1.25rem, 2.5vw, 1.5rem))"
                }
            },
            "h4": {
                "color": {
                    "text": "var(--eb-h4-color)"
                },
                "typography": {
                    "fontSize": "var(--eb-typography-h4, clamp(1.125rem, 2vw, 1.25rem))"
                }
            },
            "button": {
                "border": {
                    "radius": "0.8rem"
                },
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--system-sans)",
                    "fontWeight": "400",
                    "fontSize": "var(--eb-typography-button, 1rem)"
                },
                "color": {
                    "background": "var(--eb-btn-bg)",
                    "text": "var(--eb-btn-color)"
                },
                "shadow": "none",
                ":hover": {
                    "color": {
                        "background": "var(--eb-btn-hover-bg)",
                        "text": "var(--eb-btn-hover-color)"
                    }
                }
            },
            "link": {
                "color": {
                    "text": "var(--eb-link-color)"
                },
                ":hover": {
                    "color": {
                        "text": "var(--eb-link-hover-color)"
                    }
                }
            }
        }
    }
}
